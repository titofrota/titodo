<% errors ||= [] %>

<%= form_with(model: [todo_item.todo_list, todo_item]) do |form| %>
  <% if errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
      <h2 class="font-semibold"><%= pluralize(errors.count, "error") %> prohibited this todo item from being saved:</h2>
      <ul class="list-inside list-disc">
        <% errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex items-center space-x-4">
    <div class="flex-1">
      <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "What needs to be done?" %>
    </div>

    <div class="flex items-center justify-center">
      <%= form.submit "+", class: "inline-block w-10 h-10 bg-blue-500 text-white rounded-full shadow hover:bg-blue-600" %>
    </div>
  </div>
<% end %>
