<%= turbo_frame_tag :new_todo_item do %>
  <% content_for :title, "New Todo Item" %>

  <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">New Todo Item</h1>

    <%= render "form", todo_item: @todo_item %>

    <div class="mt-6">
      <%= link_to "Back to Todo List", todo_list_path(@todo_item.todo_list), class: "inline-block px-4 py-2 bg-gray-300 text-black rounded-lg shadow hover:bg-gray-400" %>
    </div>
  </div>
<% end %>
