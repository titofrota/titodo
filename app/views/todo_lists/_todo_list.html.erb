<%= link_to todo_list, class: "block" do %>
  <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md hover:bg-gray-50 cursor-pointer">
    <div class="flex items-center justify-between w-full">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= todo_list.name %>
      </h1>

      <%= render "counter", todo_list: todo_list %> 
    </div>
  </div>
<% end %>