<%= content_for :title, "Todo Lists" %>

  <% if @todo_lists.empty? %>
    <div class="text-center py-8">
      <h2 class="text-3xl font-semibold text-gray-700 mb-4">You have no todo lists yet ðŸ«¤</h2>
      <p class="text-lg text-gray-500 mb-6">Start by creating your first Todo List and organize what needs to be done!</p>
      <%= link_to "Create a New Todo List", new_todo_list_path, class: "inline-block px-6 py-3 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600 text-xl" %>
    </div>
  <% else %>
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Todo Lists</h1>
        <div id="todo_lists" class="space-y-4">
          <% @todo_lists.each do |todo_list| %>
            <%= render todo_list %>
          <% end %>
        </div>

      <div class="mt-6">
        <%= link_to "New Todo List", new_todo_list_path, class: "inline-block px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600" %>
      </div>
    </div>
  <% end %>

<%= turbo_stream_from "todo_lists" %>
