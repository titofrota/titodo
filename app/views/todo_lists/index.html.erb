<% if @todo_lists.empty? %>
  <div id="todo_lists_empty" class="text-center py-8">
    <h2 class="text-3xl font-semibold text-gray-700 mb-4">You have no todo lists yet ðŸ«¤</h2>
    <p class="text-lg text-gray-500 mb-6">Start by creating your first Todo List and organize what needs to be done!</p>
  </div>
<% else %>
    <%= render partial: "todo_lists/todo_lists", locals: { todo_lists: @todo_lists } %>
<% end %>

  <div class="max-w-4xl my-4 mx-auto p-6 bg-white rounded-lg shadow-md">
    <%= turbo_frame_tag "new_todo_list" do %>
